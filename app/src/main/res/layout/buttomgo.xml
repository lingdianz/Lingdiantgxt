<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/firsthead"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue3"
        android:gravity="center">
    <TextView
        android:id="@+id/tvmulu"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:gravity="center"/>
    <View
        android:id="@+id/firsttv"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_weight="1"/>

    <!--<Button-->
        <!--android:id="@+id/test1"-->
        <!--android:layout_width="60dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:text="测试"-->
        <!--android:background="@color/blue3" />-->

    <Button
        android:id="@+id/firstset"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/setimg" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/blue1" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@color/blue1">

        <RadioButton
            android:id="@+id/rb_0"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:button="@null"
            android:text="设备"
            android:checked="true"
            android:textSize="15sp"
            android:textColor="@drawable/rediocolor"
            android:drawableTop="@drawable/tiaoguangimg"
            android:gravity="center"/>

        <RadioButton
            android:id="@+id/rb_1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:button="@null"
            android:text="发现"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@drawable/rediocolor"
            android:drawableTop="@drawable/fujinimg"/>
        <RadioButton
            android:id="@+id/rb_2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:button="@null"
            android:text="消息"
            android:textSize="15sp"
            android:textColor="@drawable/rediocolor"
            android:drawableTop="@drawable/fenzuimg"
            android:gravity="center" />
        <RadioButton
            android:id="@+id/rb_3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:button="@null"
            android:text="我"
            android:textColor="@drawable/rediocolor"
            android:textSize="15sp"
            android:drawableTop="@drawable/wodeimg"
            android:gravity="center" />
    </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/rbnew0"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/yuan_bad"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/rbnew1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/yuan_bad"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rbnew2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/yuan_bad"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"/>
            <ImageView
                android:id="@+id/rbnew3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/yuan_bad"
                android:layout_marginLeft="30dp"
                android:layout_weight="1"/>

        </LinearLayout>
</RelativeLayout>

</LinearLayout>