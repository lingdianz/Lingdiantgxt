<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/blue3to1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnback"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:text="返回"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/blue0"
        android:background="@drawable/yuajiao"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@android:color/transparent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/layoutbian"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:focusableInTouchMode="true">
            <EditText
                android:id="@+id/etusername"
                android:textSize="20dp"
                android:hint="输入您的账号"
                android:maxLength="9"
                android:background="@android:color/transparent"
                android:drawablePadding="5dp"
                android:paddingLeft="5dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/blue1"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/layoutbian"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:focusableInTouchMode="true">
            <EditText
                android:id="@+id/etphone"
                android:textSize="20dp"
                android:hint="输入11位手机号"
                android:maxLength="11"
                android:background="@android:color/transparent"
                android:drawablePadding="5dp"
                android:paddingLeft="5dp"
                android:inputType="number"
                android:textColor="@color/black"
                android:textColorHint="@color/blue1"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <Button
            android:id="@+id/btngetmima"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="找回密码"
            android:textSize="25dp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/yuajiao"
            android:textColor="@color/blue0"
            android:enabled="true"/>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/ring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</LinearLayout>
