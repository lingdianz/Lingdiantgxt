<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutsys"
    android:orientation="vertical"
    android:background="@mipmap/blue3to1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <Button
            android:id="@id/btnback"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="返回"
            android:layout_gravity="center"
            android:textSize="20sp"
            android:textColor="@color/blue0"
            android:background="@drawable/yuajiao"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="添加设备"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@android:color/transparent"/>

        <Button
            android:id="@+id/btnsys"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="扫一扫"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="@color/blue0"
            android:background="@drawable/yuajiao"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/layoutbian"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="设备识别码: "
            android:textColor="@color/blue0"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/tvresult"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="15sp"
            android:hint="识别码"
            android:textColor="@color/black"
            android:background="@color/transparent"
            android:maxLength="25"/>

    </LinearLayout>
    <Button
        android:id="@+id/btntijiao"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="提交"
        android:layout_gravity="center"
        android:textColor="@color/blue0"
        android:background="@drawable/yuajiao"/>

    <ProgressBar
        android:id="@+id/ring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</LinearLayout>