<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/bluepp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btnsysload"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="扫一扫登录"
        android:textSize="18sp"
        android:layout_gravity="right"
        android:textColor="@color/blue0"
        android:textStyle="bold"
        android:background="@drawable/yuajiao"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <ProgressBar
        android:id="@+id/ring"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <LinearLayout
        android:id="@+id/textv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:background="@android:color/transparent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30sp"
        android:background="@drawable/layoutbian"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_horizontal"
        android:focusableInTouchMode="true">
        <EditText
            android:id="@+id/username"
            android:textSize="20dp"
            android:hint="请输入账号"
            android:maxLength="16"
            android:background="@android:color/transparent"
            android:drawablePadding="5dp"
            android:paddingLeft="5dp"
            android:textColor="#000000"
            android:textColorHint="@color/blue1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/layoutbian"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="center_horizontal">
        <View
            android:layout_width="35dp"
            android:layout_height="30dp"/>
        <EditText
            android:id="@+id/password"
            android:textSize="20dp"
            android:hint="请输入密码"
            android:maxLength="16"
            android:inputType="textPassword"
            android:background="@android:color/transparent"
            android:drawablePadding="5dp"
            android:paddingLeft="5dp"
            android:textColorHint="@color/blue1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>
        <ImageView
            android:id="@+id/imgeye"
            android:src="@mipmap/eye"
            android:layout_gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:visibility="invisible"/>

    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_horizontal">
            <CheckBox
                android:id="@+id/cbwrite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="记住密码"
                android:textColor="@color/blue3"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/cbauto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动登录"
                android:textColor="@color/blue3"
                android:textSize="20dp"
                android:layout_marginLeft="50dp"/>

        </LinearLayout>
        <Button
            android:id="@+id/btnload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="25dp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/yuajiao"
            android:textColor="@color/blue0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/fogotmima"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="忘记密码"
                android:textSize="15dp"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text=" 还没有账号？ "
                android:textSize="15dp"
                android:textColor="@color/blue0"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/sideuser"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="点我注册！"
                android:textSize="15dp"
                android:textColor="@android:color/holo_blue_light"
                android:layout_marginTop="5dp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>