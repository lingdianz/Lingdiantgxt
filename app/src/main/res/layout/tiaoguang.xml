<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tiaoguang"
    android:layout_width="320dp"
    android:layout_height="320dp"
    android:layout_gravity="center"
    android:background="@drawable/yuajiao"
    tools:context="com.example.hesiod.lingdiantgxt.tiaoguang">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@mipmap/dengpao0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="22sp"
        android:text="@string/亮度调节"
        android:textColor="@color/blue0"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>
    <TextView
        android:id="@+id/tvname"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="22sp"
        android:textStyle="italic"
        android:textColor="@color/blue0"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/tvtype"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/blue0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/tvsetvtg"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/blue0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/tvsetcr"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/blue0"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"/>
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:elevation="5dp"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardBackgroundColor="@color/blue0"
        android:layout_centerInParent="true"
        android:foreground = "?attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/tvvtg"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/oval_yuan"/>
                <TextView
                    android:id="@+id/tvcr"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:textSize="17sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/oval_yuan"/>

                <TextView
                    android:id="@+id/tvwd"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="5dp"
                    android:gravity="center"
                    android:background="@drawable/oval_yuan"/>

                    <TextView
                        android:id="@+id/tvbn"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:background="@drawable/oval_yuan"/>


            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cardbright"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:elevation="5dp"
                app:cardCornerRadius="80dp"
                app:cardBackgroundColor="@color/blue1"
                android:layout_centerInParent="true"
                android:foreground = "?attr/selectableItemBackground">

                <RelativeLayout
                    android:id="@+id/layoutbright"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@mipmap/brightbottom">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cardsend"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        app:cardElevation="5dp"
                        app:cardCornerRadius="35dp"
                        app:cardBackgroundColor="@color/blue3"
                        android:layout_centerInParent="true"
                        android:foreground = "?attr/selectableItemBackground">
                    <TextView
                        android:id="@+id/tvbright"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="35sp"
                        android:gravity="center"
                        android:textColor="@color/blue0"
                        android:background="@color/transparent"
                        android:layout_centerInParent="true"/>
                        </android.support.v7.widget.CardView>

                    <ImageView
                        android:id="@+id/imgclose"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@mipmap/kaiguan"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="17.5dp"/>
                </RelativeLayout>
                </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/tvfangwei"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="@string/亮度_0_1_100"
                android:textSize="15sp"/>

            <ProgressBar
                android:id="@+id/ring"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"/>


            <ImageView
                android:id="@+id/imgadd"
                android:src="@mipmap/jia"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="?android:attr/selectableItemBackground"/>
            <ImageView
                android:id="@+id/imgdec"
                android:src="@mipmap/jian"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:background="?android:attr/selectableItemBackground"/>

            <!--<ImageView-->
                <!--android:id="@+id/imgtimer"-->
                <!--android:src="@mipmap/noise"-->
                <!--android:layout_width="40dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:layout_margin="5dp"-->
                <!--android:scaleType="centerCrop"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:background="?android:attr/selectableItemBackground"/>-->

        </RelativeLayout>

        <ImageView
            android:id="@+id/imgpoint"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@mipmap/dengpao0"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>
